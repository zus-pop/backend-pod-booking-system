{
    "compilerOptions": {
        "target": "ES2017",
        "module": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "noEmit": true,
    },
    "include": [
        "src/app/**/*.ts",
        "src/jest.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}